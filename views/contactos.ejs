<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Base de Datos</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

</head>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


<body style="background-color:black;">
    <div class="position">
    <h1 class="text-dats" align="center" style="
      color:white; 
      margin: 1em; 
      font-family:Arial, Helvetica, sans-serif"> Contactos</h1>
<table class="table table-dark">
    <thead>
      <tr>
        <th scope="col"><span style="
        background-color: rgb(90, 90, 90); 
        border-radius: 5px;
        padding: 5px 10px;">Email</span></th>

        <th scope="col" style="padding-left: 8px;"><span style="
        background-color: rgb(90, 90, 90); 
        border-radius: 5px;
        padding: 5px 10px;
        
          ">Nombre</span></th>

        <th scope="col"><span style="
        background-color: rgb(90, 90, 90); 
        border-radius: 5px;
        padding: 5px 10px;


          ">Comentario</span></th>
        <th scope="col" style="padding-left: 8px;"><span style="
          background-color: rgb(90, 90, 90); 
          border-radius: 5px;
          padding: 5px 10px;">IP</span></th>

        <th scope="col" style="padding-left: 8px;"><span style="
          background-color: rgb(90, 90, 90); 
          border-radius: 5px;
          padding: 5px 10px;">Fecha</span></th>

        <th scope="col" style="padding-left:8px;"><span style="
          background-color: rgb(90, 90, 90); 
          border-radius: 5px;
          padding: 5px 10px;">Hora</span></th>
        <th scope="col" style="padding-left:8px;"><span style="
          background-color: rgb(90, 90, 90); 
          border-radius: 5px;
          padding: 5px 10px;">Pais</span></th>
      </tr>
    </thead>
    <tbody>
    <% for (const clientData of get) { %>
      <tr>
        <th><%= clientData.email%></th>
        <td><%= clientData.name%></td>
        <td style="width: 354px;padding-left: 15px;padding-bottom: 0px;">
          <div style="
          box-sizing: border-box;
          /* Control de la altura con base en el texto del div*/
          height: auto;
          word-wrap: break-word;
          width:300px
          "><p style="text-align:justify; margin:0;"><%= clientData.commentary%></p>
          </div>
          </td>
        <td><%= clientData.ipaddress%></td>
        <td><%= clientData.date%></td>
        <td><%= clientData.hour%></td>
        <td><%= clientData.country%></td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>
</body>
</html>